@model IEnumerable<WebEcommerce.Models.Cart>
@section Styles {
    <link rel="stylesheet" href="~/css/indexAdmin.css">
}
@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <h1>Cart Management</h1>
    <a asp-action="Create">
        <i class="fa-solid fa-plus"></i>
        Create new Cart
    </a>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.CartId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Quantity)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Customer)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Product)
                </th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CartId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Quantity)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Customer.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Product.Name)
                    </td>
                    <td>
                        <a class="btn btn-edit" asp-action="Edit" asp-route-id="@item.CartId">Edit</a>
                        <a class="btn btn-delete" asp-action="Delete" asp-route-id="@item.CartId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>